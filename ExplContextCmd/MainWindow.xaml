        <Button Grid.Row="4" Margin="10,0,10,5" HorizontalAlignment="Left" Content=" Export " Click="uiExport_Click"/>
        <Button Grid.Row="4" Margin="10,0,10,5" HorizontalAlignment="Right" Content=" OK " Click="uiOK_Click" />
